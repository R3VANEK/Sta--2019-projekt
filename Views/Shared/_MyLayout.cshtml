<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        *{
            margin:0;
            padding:0;
        }
        #menu{
            width:100%;
            height:70px;
            background-color:blue;
            margin-top:0%;
        }
        .menu_option{
            width:33%;
            height:100%;
            float:left;
        }
        .menu_option a{
            text-decoration:none;
            color:white;
            font-size:2em;
            
        }
    </style>
</head>
<body>
    <div id="menu">

        <div class="menu_option">
            <a href="Index">Menu główne</a>
        </div>


    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
